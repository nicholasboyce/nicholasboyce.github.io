---
import Social from "./Social.astro";
const socials = [{
    platform: 'Github',
    username: 'nicholasboyce',
    TLD: 'com/'
}, {
    platform: 'Frontend Mentor',
    username: 'nicholasboyce',
    TLD: 'io/profile/'
}, {
    platform: 'LinkedIn',
    username: 'nicholasboyce',
    TLD: 'com/in/'
}];
---
<style>
    footer {
      display: flex;
      gap: 1rem;
      margin-top: 2rem;
      justify-content: center;
      width: 80%;
      margin-inline: auto;
    }
</style>

<footer>
  {socials.map((media) => <Social platform={media.platform} username={media.username} TLD={media.TLD} />)}
</footer>